package movegen

import (
	"chess/bb"
)

func WhiteRookMoves(state GameState) []GameState {
	black := state.black.AllPieces()
	white := state.white.AllPieces()
	states := make([]GameState, 0)
	rooks := state.white.rooks

	lsb := bb.Lsb(rooks)
	for ; rooks != bb.Empty; {

		mask := bb.RookAttack(lsb)
		moves := mask &^ (black & white)
		move := bb.Lsb(moves)

		for ; moves != bb.Empty; { 
			newState := state
			newState.white.rooks = (newState.white.pawns &^ lsb) | move
			states = append(states, newState)
			moves = moves &^ move
			move = bb.Lsb(moves)
		}
		
		rooks = rooks &^ lsb
		lsb = bb.Lsb(rooks)
	}
	return states
}

func BlackRookMoves(state GameState) []GameState {
	black := state.black.AllPieces()
	white := state.white.AllPieces()
	states := make([]GameState, 0)
	rooks := state.black.rooks

	lsb := bb.Lsb(rooks)
	
	for ; rooks != bb.Empty; {

		mask := bb.RookAttack(lsb)
		moves := mask &^ (black & white)
		move := bb.Lsb(moves)

		for ; moves != bb.Empty; {
			newState := state
			newState.white.rooks = (newState.white.pawns &^ lsb) | move
			states = append(states, newState)
			moves = moves &^ move
			move = bb.Lsb(moves)
		}
		
		rooks = rooks &^ lsb
		lsb = bb.Lsb(rooks)
	}
	return states
}

