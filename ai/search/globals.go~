package search

import (
	"chess/ai/gen"
)

var (
	BlackHistory [][]gen.Move
	WhiteHistory [][]gen.Move
)

func initialiseGlobals() {
	BlackHistory = make([][]gen.Move, 64)
	WhiteHistory = make([][]gen.Move, 64)
	for i := 0; i < 64; i++ {
		BlackHistory[i] = make([]gen.Move, 0)
		WhiteHistory[i] = make([]gen.Move, 0)
	}
}
